/* pages/login/login.wxss */
@import "style/weui.wxss";
page{
  height: 100%;
  width:100%;
}

.container {
  height: 70%;
  width:100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 220rpx;
}


.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.login-from{
  margin-top: 90px;
  flex:auto;
  height: 100%;
}

/* 输入框 */
.username{
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
}
.password{
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.nameImage, .keyImage {
  width: 14px;
  height: 14px;
}

.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: rgb(255, 255, 255);
  background-color:#f8a73ddc;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
}
